{
    "name": "lrc-maker",
    "version": "5.0.0-rc.20190211",
    "description": "歌词滚动姬｜可能是你所能见到的最好用的歌词制作工具",
    "repository": "https://github.com/magic-akari/lrc-maker.git",
    "author": "阿卡琳 <hufan.akarin@Gmail.com>",
    "license": "MIT",
    "keywords": [
        "lrc",
        "lrc maker",
        "lyric",
        "lyric maker"
    ],
    "bugs": "https://github.com/magic-akari/lrc-maker/issues",
    "homepage": "https://github.com/magic-akari/lrc-maker#readme",
    "files": [
        "src",
        "worker",
        "build"
    ],
    "scripts": {
        "clean": "rm -rf ./build",
        "prestart": "npm run clean",
        "start": "npm run html && npm run esm:watch",
        "prebuild": "npm run clean",
        "build": "npm run css && npm run esm && npm run nomodule && npm run html",
        "version": "ts-node -P scripts/tsconfig.json scripts/generate.version.ts > worker/version.d.ts",
        "preesm": "npm run version",
        "esm": "tsc -b",
        "preesm:watch": "npm run version",
        "esm:watch": "tsc -b -w tsconfig.watch.json",
        "prenomodule": "rm -rf ./build.es6",
        "nomodule": "tsc -P tsconfig.webpack.json && webpack -p",
        "css": "postcss src/index.css -m -d build",
        "prehtml": "mkdir -p build && npm run manifest && npm run svg",
        "html": "ts-node -P scripts/tsconfig.json scripts/index.html.tsx > build/index.html",
        "manifest": "cp -r ./manifest/* ./build",
        "svg": "cp -r ./svg ./build",
        "prettier": "prettier --write {src,worker,scripts}/**/*.{ts,tsx,js,es6,css,json} *.{js,json,md} ",
        "listdiff": "prettier -l {src,worker,scripts}/**/*.{ts,tsx,js,es6,css,json} *.{js,json,md} ",
        "lint": "tslint {src,worker,scripts}/**/*.{ts,tsx,es6}"
    },
    "dependencies": {
        "react": "^16.8.2",
        "react-dom": "^16.8.2"
    },
    "devDependencies": {
        "@types/node": "^11.9.4",
        "@types/prettier": "^1.16.1",
        "@types/react": "^16.8.3",
        "@types/react-dom": "^16.8.2",
        "autoprefixer": "^9.4.7",
        "cssnano": "^4.1.10",
        "fast-glob": "^2.2.6",
        "postcss": "^7.0.14",
        "postcss-cli": "^6.1.1",
        "postcss-custom-properties": "^8.0.9",
        "postcss-import": "^12.0.1",
        "prettier": "^1.16.4",
        "source-map-loader": "^0.2.4",
        "ts-node": "^8.0.2",
        "tslint": "^5.12.1",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.3",
        "webpack": "^4.29.4",
        "webpack-cli": "^3.2.3"
    }
}
