{
    "name": "lrc-maker",
    "version": "5.0.0-beta.20190203",
    "description": "歌词滚动姬｜可能是你所能见到的最好用的歌词制作工具",
    "repository": "https://github.com/magic-akari/lrc-maker.git",
    "author": "阿卡琳 <hufan.akarin@Gmail.com>",
    "license": "MIT",
    "keywords": [
        "lrc",
        "lrc maker",
        "lyric",
        "lyric maker"
    ],
    "bugs": "https://github.com/magic-akari/lrc-maker/issues",
    "homepage": "https://github.com/magic-akari/lrc-maker#readme",
    "files": [
        "build"
    ],
    "scripts": {
        "start": "npm run html && npm run tsc:worker && npm run tsc:watch",
        "prebuild": "rm -rf ./build ./build.es6",
        "build": "npm run css && npm run tsc:build && npm run nomodule && npm run html",
        "tsc": "tsc",
        "tsc:build": "tsc -b",
        "tsc:watch": "tsc -w --sourceMap false",
        "tsc:worker": "tsc -P worker/tsconfig.json",
        "nomodule": "tsc -P tsconfig.webpack.json && webpack -p",
        "css": "postcss src/index.css -m -d build",
        "prehtml": "mkdir -p build && cp -r ./svg ./build",
        "html": "ts-node -P scripts/tsconfig.json scripts/index.html.tsx > build/index.html",
        "prettier": "prettier --write {src,worker,scripts}/**/*.{ts,tsx,js,es6,css,json} *.{js,json,md} ",
        "listdiff": "prettier -l {src,worker,scripts}/**/*.{ts,tsx,js,es6,css,json} *.{js,json,md} ",
        "lint": "tslint {src,worker,scripts}/**/*.{ts,tsx,es6}"
    },
    "dependencies": {
        "normalize.css": "^8.0.1",
        "react": "^16.8.0-alpha.1",
        "react-dom": "^16.8.0-alpha.1"
    },
    "devDependencies": {
        "@types/node": "^10.12.21",
        "@types/react": "^16.8.1",
        "@types/react-dom": "^16.0.11",
        "autoprefixer": "^9.4.7",
        "cssnano": "^4.1.8",
        "fast-glob": "^2.2.6",
        "postcss": "^7.0.14",
        "postcss-cli": "^6.1.1",
        "postcss-custom-properties": "^8.0.9",
        "postcss-import": "^12.0.1",
        "prettier": "^1.16.4",
        "source-map-loader": "^0.2.4",
        "ts-node": "^8.0.2",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "webpack": "^4.29.0",
        "webpack-cli": "^3.2.1"
    }
}
